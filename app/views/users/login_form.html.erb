<div class="main users-new">
  <div class="container">
  <%= flash[:notice] %>
    <h1>Login</h1>
    <div class="form users-form">
      <div class="form-body">
      <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
      <% end %>
      <%=form_tag("/login") do %>
        <p>mail address</p>
        <input name = "email" type="text" style= color:black value= "<%=@email%>">
        <p>password</p>
        <input type= "password" name = "password" style= color:black value="<%=@password%>">
        <input type="submit" value="ログイン">
        <% end %>
      </div>
   </div>
  </div>
</div>
