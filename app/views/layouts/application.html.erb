<!DOCTYPE html>
<html>
  <head>
    <title>Book　Manage</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><font color="white">Home</font></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <div class="search">
        <%= form_with url: search_path, local: true do |f| %>
        <%=f.text_field  :search, class:"form-group",placeholder:"search"%>
        <%=submit_tag "Search", class: "btn btn-primary"%>
        <%end%>
        </div>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/all"><font color="white">All Book</a></font></li>
        <li><a href="/new"><font color="white">New Book</a></font></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><font color="white">Category</font><span class="caret"></span></a>
          <ul class="dropdown-menu">
              <% @categories.each do |category|%>
            <li><a href="/categories/<%= category.id%>"><%=category.name%></a></li>
            <%end%>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
         
    </header>
        <div class="container con">
            <%= yield %>
        </div>
  </body>
  
  
  <footer>
        <div class= "container">
            <p>
             ©︎hironobu-yamane All rights reserve
            </P>
        </div>
    </footer>
</html>

